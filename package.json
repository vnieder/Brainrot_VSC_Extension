{
  "name": "brainrot-comment",
  "displayName": "Brainrot Comment",
  "description": "Insert brainrot comments into your code",
  "version": "0.0.1",
  "publisher": "VMN16",
  "repository": {
    "type": "git",
    "url": "https://github.com/vnieder/Brainrot_VSC_Extension.git"
  },
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:brainrot.addComment",
    "onCommand:brainrot.setApiKey"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "brainrot.addComment",
        "title": "Add Brainrot Comment"
      },
      {
        "command": "brainrot.setApiKey",
        "title": "Set Brainrot Anthropic API Key"
      }
    ],
    "keybindings": [
      {
        "command": "brainrot.addComment",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.106.1",
    "typescript": "^4.9.5"
  }
}
