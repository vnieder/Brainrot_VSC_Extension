{
  "name": "brainrot-comment",
  "displayName": "Brainrot Comment",
  "description": "Automatically inserts 'Brainrot comment' at the beginning of the current line",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:brainrot.addComment",
    "onCommand:brainrot.setApiKey"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "brainrot.addComment",
        "title": "Add Brainrot Comment"
      },
      {
        "command": "brainrot.setApiKey",
        "title": "Set Brainrot API Key"
      }
    ],
    "keybindings": [
      {
        "command": "brainrot.addComment",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}

